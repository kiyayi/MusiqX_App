<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F2C30"
        >

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/title_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_back"
            />

        <android.support.v7.widget.RecyclerView
            android:padding="5dp"
            android:layout_below="@+id/title_card"
            android:id="@+id/recycler_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DAE9CB"
            />

        <Button
            android:id="@+id/imageButton_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_card"
            android:background="@drawable/card_right"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="Show All"
            android:textAllCaps="false"
            android:textStyle="bold|italic" />

    </RelativeLayout>





</android.support.v7.widget.CardView>